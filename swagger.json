{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.2",
    "title": "Aqua Tracker API Documentation",
    "description": "Description of public and private API endpoints for the [Aquatracker](https://aqua-track.netlify.app/) web-application"
  },
  "consumes": ["application/json", "multipart/form-data"],
  "produces": ["application/json"],
  "servers": [{ "url": "https://water-tracker-be-production.up.railway.app" }],
  "tags": [
    {
      "name": "Users",
      "description": "User authorization and data endpoints"
    },
    {
      "name": "Water",
      "description": "Water tracker endpoints"
    }
  ],
  "paths": {
    "/api/users/signup": {
      "post": {
        "tags": ["Users"],
        "summary": "Sign-up user",
        "requestBody": {
          "description": "Sign-up user object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userEmail": {
                    "$ref": "#/components/examples/users/userEmail"
                  },
                  "userPassword": {
                    "$ref": "#/components/examples/users/userPassword"
                  }
                },
                "required": ["userEmail", "userPassword"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User was successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "userData": {
                          "type": "object",
                          "properties": {
                            "UserEmail": {
                              "$ref": "#/components/examples/users/userEmail"
                            }
                          }
                        }
                      }
                    }
                  },
                  "example": {
                    "userData": {
                      "userEmail": "yihaga5869111@exweme.com"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestResponse"
                }
              }
            }
          },
          "409": {
            "description": "User with this email already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "description": "Reason" }
                  },
                  "example": {
                    "message": "Email is already in use"
                  }
                }
              }
            }
          }
        }
      }
    },
